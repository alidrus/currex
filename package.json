{
    "name": "currex",
    "version": "0.0.1",
    "description": "Exchange Rates API command line utility.",
    "main": "src/index.js",
    "bin": "src/index.js",
    "scripts": {
        "build": "NODE_ENV=production pkg . --output dist/currex",
        "dev": "NODE_ENV=development node .",
        "clean": "[ -e dist/currex ] && rm -f dist/currex",
        "dist-clean": "[ -e dist/currex ] && rm -fr dist node_modules yarn.lock package-lock.json",
        "install-bin": "[ -e dist/currex ] || yarn build && install -m 0755 dist/currex $*",
        "lint": "eslint src/",
        "lintfix": "eslint --fix src/"
    },
    "author": "Abu Bakar Al-Idrus <alidrus@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "axios": "^0.19.2",
        "minimist": "^1.2.5"
    },
    "devDependencies": {
        "eslint": "^7.7.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-plugin-import": "^2.22.0",
        "pkg": "^4.4.9"
    }
}
